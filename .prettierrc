{
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "useTabs": false,
    "tabWidth": 4,
    "pluginSearchDirs": ["src"],
    "plugins": ["prettier-plugin-svelte"],
    "svelteSortOrder" : "scripts-styles-markup",
    "svelteStrictMode": true,
    "svelteBracketNewLine": true,
    "svelteAllowShorthand": true,
    "svelteIndentScriptAndStyle": true,
    "overrides": [
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript"
            }
        }
    ]
}
